<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kullanıcılar</title>
    <style>
        body {
            margin: 0; /* Varsayılan margin'leri kaldır */
            padding: 0; /* Varsayılan padding'leri kaldır */
            background-color: black; /* Arka planı siyah yap */
            color: white; /* Yazı rengi beyaz */
            font-family: Arial, sans-serif; /* Yazı tipi */
        }

        h1 {
            text-align: center; /* Başlığı ortala */
            padding: 20px; /* Üst ve alt boşluk ekle */
            margin: 0; /* Varsayılan üst ve alt boşlukları sıfırla */
        }

        table {
            width: 80%; /* Tablo genişliği */
            margin: 20px auto; /* Ortala */
            border-collapse: collapse; /* Kenarları birleştir */
        }

        th, td {
            padding: 10px; /* İç boşluk ekle */
            text-align: center; /* Metni ortala */
            border: 1px solid yellow; /* Kenar rengi sarı */
        }

        th {
            background-color: #333; /* Başlık arka plan rengi koyu gri */
            color: white; /* Başlık yazı rengi beyaz */
        }

        tr:nth-child(even) {
            background-color: #444; /* Çift satırların arka plan rengi koyu gri */
        }

        tr:hover {
            background-color: #555; /* Üzerine gelindiğinde satır rengi değişimi */
        }
        #sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #282c34; 
            color: #ffffff; 
            overflow-x: hidden;
            transition: 0.3s;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5);
        }

        #sidebar.closed {
            width: 0;
            padding-top: 0;
        }

        #closeSidebar {
            color: white;
            font-size: 30px;
            margin-left: 10px;
            border: none;
            background: none;
            cursor: pointer;
            transition: 0.3s; 
        }

        #closeSidebar:hover {
            background-color: rgba(255, 255, 255, 0.2); 
            border-radius: 5px; 
        }

        .dropdown {
            margin-top: 20px; 
            padding: 10px; 
        }

        .dropdown h3 {
            text-align: center; 
            margin-bottom: 20px; 
            font-size: 24px; 
            color: #ffcc00; 
        }

        .dropdown a {
            padding: 10px 15px;
            text-decoration: none;
            display: block; 
            font-size: 16px;
            color: #ffffff; 
            border-radius: 5px;
            transition: 0.3s; 
        }

        .dropdown a:hover {
            background-color: rgba(255, 204, 0, 0.2); 
        }

        #toggleSidebar {
            position: fixed;
            top: 20px;
            left: 15px;
            text-align: left;
            background-color: #333;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            z-index: 2;
            
        }
        #toggleSidebar:hover {
            background-color: rgba(255, 204, 0, 0.2); 
        }
    </style>
</head>
<body>
    <button id="toggleSidebar">☰ Menü</button>
  
    <div id="sidebar" class="closed">
        <button id="closeSidebar"></button>
        <div class="dropdown">
            <h3>Menü</h3>
            <a href="http://192.168.92.128:7474/users">Kullanıcılar</a>
            <a href="http://192.168.92.128:7474/home.html">Yönetim Sayfası</a>
            <a href="http://192.168.92.128:7474/" id="logoutBtn">Çıkış Yap</a>
        </div>
    </div>
    
    <h1>Kullanıcı Listesi</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>İsim</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    
        <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sidebar = document.getElementById('sidebar');
            const toggleSidebar = document.getElementById('toggleSidebar');
            const closeSidebar = document.getElementById('closeSidebar');

            toggleSidebar.addEventListener('click', () => {
                sidebar.classList.toggle('closed');
            });

            closeSidebar.addEventListener('click', () => {
                sidebar.classList.add('closed');
            });
        });
    </script>
    
</body>
</html>

